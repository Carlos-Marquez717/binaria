{
  "manifest_version": 3,
  "name": "IQ Option Alert Overlay",
  "description": "Muestra alertas CALL/PUT desde tu API FastAPI directamente en el Traderoom.",
  "version": "1.0.0",
  "permissions": ["alarms", "storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://iqoption.com/*",
    "http://localhost:8000/*",
    "https://tuservidor.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://iqoption.com/traderoom/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
